{% layout "layout.liquid" %}
{% assign base_url = ".." %}

{% block content %}
<div class="space-y-6">
    <!-- Back Button & Breadcrumbs -->
    <div class="flex items-center gap-2 text-sm text-muted-foreground">
        <a href="../index.html" class="hover:text-foreground transition-colors">Dashboard</a>
        <span>/</span>
        <span class="text-foreground font-medium">Feature Detail</span>
    </div>

    <!-- Feature Header -->
    <div class="rounded-xl border bg-card text-card-foreground shadow overflow-hidden">
        <div class="p-4 md:p-6 flex flex-col lg:flex-row lg:items-center justify-between gap-6">
            <div class="space-y-4 flex-1">
                <div class="space-y-2">
                    <h2 class="text-xl md:text-2xl font-bold text-foreground leading-tight">{{ data.feature.name }}</h2>
                    {% if data.feature.tags.size > 0 %}
                    <div class="flex flex-wrap gap-1.5">
                        {% for tag in data.feature.tags %}
                        <span class="inline-flex items-center rounded-full bg-primary/10 px-2 py-0.5 text-[10px] font-semibold text-primary">
                            {{ tag.name }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
                
                <div class="pt-2 border-t lg:border-t-0">
                    {% render "includes/feature_metadata.liquid", feature: data.feature %}
                </div>
            </div>

            <div class="grid grid-cols-3 gap-3 md:gap-4 shrink-0 lg:ml-6">
                <div class="flex flex-col items-center justify-center bg-green-500/10 rounded-xl py-3 px-3 border border-green-500/20 min-w-[80px] md:min-w-[100px]">
                    <div class="text-xl md:text-2xl font-bold text-green-600 leading-none">{{ data.feature.passed | default: 0 }}</div>
                    <div class="text-[9px] md:text-[10px] uppercase font-bold text-green-700/70 mt-1 tracking-wider">Passed</div>
                </div>
                <div class="flex flex-col items-center justify-center bg-red-500/10 rounded-xl py-3 px-3 border border-red-500/20 min-w-[80px] md:min-w-[100px]">
                    <div class="text-xl md:text-2xl font-bold text-red-600 leading-none">{{ data.feature.failed | default: 0 }}</div>
                    <div class="text-[9px] md:text-[10px] uppercase font-bold text-red-700/70 mt-1 tracking-wider">Failed</div>
                </div>
                <div class="flex flex-col items-center justify-center bg-yellow-500/10 rounded-xl py-3 px-3 border border-yellow-500/20 min-w-[80px] md:min-w-[100px]">
                    <div class="text-xl md:text-2xl font-bold text-yellow-600 leading-none">{{ data.feature.skipped | default: 0 }}</div>
                    <div class="text-[9px] md:text-[10px] uppercase font-bold text-yellow-700/70 mt-1 tracking-wider">Skipped</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Rows -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
         <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
            <h3 class="text-sm font-semibold mb-4 text-muted-foreground uppercase tracking-wider">Scenario Distribution</h3>
            <div id="feature-scenarios-chart" class="h-64"></div>
        </div>
        <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
            <h3 class="text-sm font-semibold mb-4 text-muted-foreground uppercase tracking-wider">Execution Summary</h3>
            <div id="feature-execution-chart" class="h-64"></div>
        </div>
        <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
            <h3 class="text-sm font-semibold mb-4 text-muted-foreground uppercase tracking-wider">Execution Time Distribution</h3>
            <div id="feature-time-dist-chart" class="h-64"></div>
        </div>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
         <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
            <h3 class="text-sm font-semibold mb-4 text-muted-foreground uppercase tracking-wider">Scenario Step Execution Time Trend</h3>
            <div id="feature-step-trend-chart" class="h-64"></div>
        </div>
        <div class="rounded-xl border bg-card text-card-foreground shadow p-6">
            <h3 class="text-sm font-semibold mb-4 text-muted-foreground uppercase tracking-wider">Steps per Scenarios</h3>
            <div id="feature-steps-per-scenario-chart" class="h-64"></div>
        </div>
    </div>

    <!-- Scenarios -->
    <div class="space-y-4">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <h3 class="text-xl font-bold text-foreground">Scenarios</h3>
            <div class="flex items-center gap-2 bg-muted/30 p-1 rounded-lg border">
                <button class="status-filter cursor-pointer active bg-background shadow-sm border border-primary ring-2 ring-primary/20 px-4 py-1.5 rounded-md text-xs font-bold transition-all hover:bg-background hover:shadow-sm" data-status="all">ALL</button>
                <button class="status-filter cursor-pointer border border-transparent px-4 py-1.5 rounded-md text-xs font-bold transition-all hover:bg-background hover:shadow-sm text-green-600 dark:text-green-500" data-status="passed">PASSED</button>
                <button class="status-filter cursor-pointer border border-transparent px-4 py-1.5 rounded-md text-xs font-bold transition-all hover:bg-background hover:shadow-sm text-red-600 dark:text-red-500" data-status="failed">FAILED</button>
                <button class="status-filter cursor-pointer border border-transparent px-4 py-1.5 rounded-md text-xs font-bold transition-all hover:bg-background hover:shadow-sm text-yellow-600 dark:text-yellow-500" data-status="skipped">SKIPPED</button>
            </div>
        </div>
        <div id="scenarios-container" class="space-y-4">
            {% for scenario in data.feature.elements %}
                {% render "includes/scenario_card.liquid", scenario: scenario %}
            {% endfor %}
        </div>
    </div>
</div>

<script>
    // Embedded data for charts
    const featureData = {{ data.feature | json }};
</script>
{% endblock %}
