{
  "name": "mchr",
  "version": "3.10.0",
  "description": "Generate beautiful Cucumber.js reports for multiple instances (browsers / devices)",
  "type": "module",
  "keywords": [
    "cucumber",
    "html",
    "test report",
    "multiple-cucumber-html-reporter",
    "html report",
    "json to html"
  ],
  "main": "dist/generate-report.js",
  "types": "dist/generate-report.d.ts",
  "license": "MIT",
  "scripts": {
    "lint": "biome lint",
    "format": "biome format",
    "format:fix": "biome format --write",
    "lint:fix": "biome lint --write",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WasiqB/multiple-cucumber-html-reporter.git"
  },
  "author": "WasiqB",
  "bugs": {
    "url": "https://github.com/WasiqB/multiple-cucumber-html-reporter/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "homepage": "https://github.com/WasiqB/multiple-cucumber-html-reporter#readme",
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/node": "^25.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{ts,js,mjs,json}": [
      "pnpm format:fix",
      "pnpm format",
      "pnpm lint:fix",
      "pnpm lint"
    ]
  },
  "packageManager": "pnpm@10.30.3"
}
